doctype strict
html 
  head
    block title

    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/reveal.js@4.3.0/dist/reveal.css"
    )
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/reveal.js@4.3.0/dist/theme/white.css"
    )

    //- Theme used for syntax highlighting of code
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/highlight.js@11.0.1/styles/vs2015.css"
    )

  body
    div(class="reveal")
      div(class="slides")
        block slides

    //- Load reveal.js    
    script(src="https://cdn.jsdelivr.net/npm/headjs@1.0.3/dist/1.0.0/head.min.js")
    script(src="https://cdn.jsdelivr.net/npm/reveal.js@4.3.0/dist/reveal.js")
    script(src="https://cdn.jsdelivr.net/npm/reveal.js@4.3.0/plugin/highlight/highlight.js")
    script
      include loadrevealjs.js
